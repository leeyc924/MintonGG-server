{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "paths": {
      "@db": ["src/db"],
      "@types": ["src/types"],
      "@utils": ["src/utils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["build", "node_modules"]
}
