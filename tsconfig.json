{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "preserveValueImports": false,
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "Node",
    "paths": {
      "@@db": ["src/db"],
      "@@types": ["src/types"],
      "@@utils": ["src/utils"]
    }
  },
  "exclude": ["build", "node_modules", "./dist/**/*"]
}
